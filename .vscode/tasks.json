{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "../../",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },            
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "args": [
                "../../",
            ],
            "options": {
                "cwd": "${fileDirname}"
            }, 
        },
        {
            "label": "build",
            "dependsOn":["cmake", "make"]
        },
    ],
}